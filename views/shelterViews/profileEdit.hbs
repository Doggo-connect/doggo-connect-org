<header id="userHeader">
  <div>
    <img src="/images/dog.png" alt="dog icon">
    <h1>DOGGO-CONNECT</h1>
  </div>
  <div>
    <a href="/private">Dashboard</a>
    <a href="/logout">Logout</a>
  </div>
</header>

<div id="creationForm">
{{#with user}}
<form action="/private/profile" method="POST" id="form-container">

<h2>Profile</h2>

<label for="name">Name of your organization</label>
<input type="text" name="name" id="name" class="inputFieldSignUp" value="{{name}}">

<label for="street">Street</label>
<input type="text"name="street" id="street" class="inputFieldSignUp" value="{{street}}">

<label for="city">City</label>
<input type="text" name="city" id="city" class="inputFieldSignUp" value="{{city}}">

<label for="postcode">Postcode</label>
<input type="text" name="postcode" id="postcode" class="inputFieldSignUp" value="{{postcode}}">

<button type="submit" id="shelterButton">Submit</button>
{{/with}}
</form> 

{{#if message}}
  <div class="error-message"><p>{{message}}</p></div>
{{/if}}

</div>