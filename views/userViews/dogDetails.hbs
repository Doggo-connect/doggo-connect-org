<header id="userHeader">
  <div>
    <img src="/images/dog.png" alt="dog icon">
    <h1>DOGGO-CONNECT</h1>
  </div>
  <div>
    <a href="/private">Dashboard</a>
    <a href="/logout">Logout</a>
  </div>
</header>

{{#with dog}}
<div id="dogDetailFlex">
  <img src="{{imageUrl}}" alt="">
  <div>
    <h1>{{name}}</h1>
    <ul>
      <li><span>Breed:</span>{{breed}}</li>
      <li><span>Size:</span>{{size}}</li>
      <li><span>Age in months:</span>{{age}}</li>
      <li><span>Gender:</span>{{gender}}</li>
      <li><span>Description:</span></li>
      <li>{{description}}</li>
      <li>{{name}} is sheltered by <a href="/shelterDetails/{{_id}}">{{shelter.name}}</a>.</li>
    </ul>
    <div>
      <h2>Apply to adopt {{name}}!</h2>
      <p>Fill in the following form to give them a new home!</p>
      <form action="/dogDetails/{{_id}}/application" method="POST">
        <label for="message">Please let us know why you would love to adopt {{name}}:</label>
        <br>
        <textarea name="message" id="message" cols="50" rows="6"></textarea>
        <br>
        <button type="submit">Apply</button>
      </form>
  </div>
  </div>
</div>

{{/with}}