<div id="signUpWrapper">
   <div>
      <form action="/loginUser" method="POST" id="form-container">
         <h2>Login</h2>

         <div>
            <label for="username">Username: </label><br>
            <input id="username" type="text" name="username" class="inputFieldSignUp">
         </div>
 
         <div>
            <label for="password">Password:</label><br>
            <input id="password" type="password" name="password" class="inputFieldSignUp">
         </div>
         
         <div>
            <button type="submit" id="loginButton">Login</button>
         </div>

         <p class="account-message">
            You don't have an account?
            <a href="/signupUser">Sign up</a>
         </p>
         
      </form>
      {{#if message}}
            <div class="error-message"><p>{{message}}</p></div>
      {{/if}}
   </div>
</div>
